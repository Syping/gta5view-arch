# Maintainer: Syping <aur@syping.de>
pkgname=gta5view-bin
pkgver=1.10.0
pkgrel=1
epoch=
pkgdesc="Open Source Snapmatic and Savegame viewer/editor for GTA V"
arch=('x86_64')
url="https://gta5view.syping.de/"
license=('GPL')
depends=(qt5-base qt5-svg qt5-translations)
provides=("${pkgname%-bin}")
conflicts=("${pkgname%-bin}")
source=("https://github.com/SyDevTeam/gta5view/releases/download/$pkgver/gta5view_$pkgver-${pkgrel}_amd64.deb")
noextract=("gta5view_$pkgver-${pkgrel}_amd64.deb")
sha256sums=("446c98dd84074d3060c8d4b54580e5d5ce4b5c19656b9c5947ab2a55b477750d")

prepare() {
    ar x gta5view_$pkgver-${pkgrel}_amd64.deb
    tar xfJ data.tar.xz
}

package() {
    cp -Rp ./usr $pkgdir/
}
